#include <stdio.h>

int main() {
    int andar;

 
    printf("quantas linhas a piramede vai ter? ");
    scanf("%d", &andar);
    for (int i = 1; i <= andar; i++) {
        for (int j = 1; j <= andar - i; j++) {
            printf(" ");
        }
        for (int asteriscos = 1; asteriscos <= (2 * i - 1); asteriscos++) {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
